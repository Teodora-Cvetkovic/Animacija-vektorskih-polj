# We want to animate a vector field using matplotlib's quiver and FuncAnimation.
import numpy as np
import matplotlib.pyplot as plt
from matplotlib.animation import FuncAnimation

# number of particles
N = 5000

# initial positions (empty)
x = np.array([])
y = np.array([])

emit_every = 10     # frames between emissions
particles_per_emit = 500
dt = 0.01

fig, ax = plt.subplots()
ax.set_xlim(-2, 2)
ax.set_ylim(-2, 2)
ax.set_aspect('equal')
particles = ax.scatter([], [], s=20)

# Function to emit new particles
def emit_particles():
    global x, y

    new_x = np.random.uniform(-1.5, 1.5, particles_per_emit)
    new_y = np.random.uniform(-1.5, 1.5, particles_per_emit)

    x = np.concatenate([x, new_x])
    y = np.concatenate([y, new_y])


def F(x, y):
    return -5 * np.exp(-x**2 - y**2), y * np.exp(-x**2 - y**2)

def update(frame):
    global x, y

    # Emit new particles
    if frame % emit_every == 0:
        emit_particles()

    # Move particles
    if len(x) > 0:
        vx, vy = F(x, y)
        x = x + dt * vx
        y = y + dt * vy

    # Optional: remove particles outside radius
    mask = x**2 + y**2 < 4
    x, y = x[mask], y[mask]

    # Update scatter plot
    particles.set_offsets(np.column_stack([x, y]))

    return particles,

ani = FuncAnimation(fig, update, frames=200, interval=50)
plt.show()